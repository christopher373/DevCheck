{
    "name": "DevCheck Environment",
    "image": "dev-check-image",
    "forwardPorts": [5432],
    "mounts": [
        "source=A:\\,target=/workspaces/DevCheck/data,type=bind"
    ],
    "runArgs": [
        "--gpus", "all",
        "--network", "host",
        // "--env-file",".devcontainer/devcontainer.env"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-toolsai.datawrangler",
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-azuretools.vscode-docker"
            ]
        }
    }
}
